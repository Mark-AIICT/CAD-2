<Window x:Class="Phase_11_POC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phase_11_POC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grd">
        <TextBox HorizontalAlignment="Left" Height="68" Margin="42,44,0,0" TextWrapping="Wrap" Text="{Binding Path=FirstName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="171" />
        <TextBox HorizontalAlignment="Left" Height="68" Margin="394,44,0,0" TextWrapping="Wrap" Text="{Binding Path=LastName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="181" />
        <Button x:Name="btnSave" IsEnabled="False" Content="SAVE" HorizontalAlignment="Left" Height="86" Margin="241,206,0,0" VerticalAlignment="Top" Width="172" Click="btnSave_Click"/>

    </Grid>
</Window>
