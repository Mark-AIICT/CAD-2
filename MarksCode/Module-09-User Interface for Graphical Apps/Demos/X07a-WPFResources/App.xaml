<Application x:Class="WPFResources.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Window1.xaml">
    <Application.Resources>
        <!-- Define an Application resource -->
        <LinearGradientBrush x:Key="shineGradientBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="LimeGreen" Offset="0"/>
            <GradientStop Color="#33FFFFFF" Offset="1"/>
        </LinearGradientBrush>
        <Style TargetType="{x:Type TextBlock}" x:Key="AppTitleText">
            <Setter Property="FontFamily" Value="Arial Narrow"/>
            <Setter Property="FontSize" Value="25px"/>
            <Setter Property="Background" Value="{DynamicResource shineGradientBrush}"/>

        </Style>

    </Application.Resources>
</Application>
