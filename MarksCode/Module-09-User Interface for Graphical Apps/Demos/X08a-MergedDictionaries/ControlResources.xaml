<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource glowGradientBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource buttonTextBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,10,5,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Width" Value="60" />
    </Style>
    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="{DynamicResource shineGradientBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource buttonTextBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,10,5,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Width" Value="60" />
    </Style>

    <Style x:Key="backStyle">
        <Setter Property="Control.Background" Value="Aqua"/>
    </Style>

</ResourceDictionary>